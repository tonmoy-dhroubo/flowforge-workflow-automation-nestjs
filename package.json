{
  "name": "flowforge-nestjs",
  "version": "0.1.0",
  "private": true,
  "description": "FlowForge workflow automation platform rewritten with NestJS",
  "scripts": {
    "build": "rimraf dist && nest build",
    "format": "prettier --write \"{apps,libs}/**/*.{ts,js,json}\"",
    "lint": "eslint \"{apps,libs}/**/*.ts\"",
    "start": "node dist/main.js",
    "start:dev": "nest start --watch",
    "start:api-gateway": "nest start api-gateway",
    "start:auth-service": "nest start auth-service",
    "start:workflow-service": "nest start workflow-service",
    "start:trigger-service": "nest start trigger-service",
    "start:orchestrator-service": "nest start orchestrator-service",
    "start:executor-service": "nest start executor-service",
    "start:log-service": "nest start log-service"
  },
  "workspaces": [
    "apps/*",
    "libs/*"
  ],
  "dependencies": {
    "@nestjs/axios": "^3.0.0",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/jwt": "^10.0.0",
    "@nestjs/mongoose": "^10.0.0",
    "@nestjs/passport": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/schedule": "^3.0.0",
    "@nestjs/serve-static": "^4.0.0",
    "@nestjs/typeorm": "^10.0.0",
    "axios": "^1.6.0",
    "bcryptjs": "^2.4.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "dotenv": "^16.0.0",
    "imapflow": "^1.0.0",
    "kafkajs": "^2.2.4",
    "mongoose": "^7.0.0",
    "nodemailer": "^6.9.0",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.0",
    "pg": "^8.11.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^5.0.0",
    "rxjs": "^7.8.0",
    "uuid": "^9.0.0",
    "helmet": "^7.0.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/express": "^4.17.21",
    "@types/node": "^20.0.0",
    "@types/passport-jwt": "^3.0.7",
    "@types/uuid": "^10.0.0",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^8.10.0",
    "eslint-plugin-prettier": "^5.0.0",
    "prettier": "^3.0.0",
    "ts-loader": "^9.4.0",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.0"
  }
}
